

<form id="signup-form">
    <h1 class="h3 mb-3 fw-normal">Sign Up</h1>

     <div class="form-floating">
      <input type="text" class="form-control" id="signup-name" placeholder="name">
      <label for="floatingInput">Name</label>
    </div>
    <div class="form-floating">
      <input type="email" class="form-control" id="signup-email" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control"id="signup-pwd" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>

    <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div>
    <button class="btn btn-primary w-100 py-2" id="signup-btn" type="submit">Sign up</button>
    <a href="/login">Login</a>
  </form>


    <script src="/js/signup.js"></script>