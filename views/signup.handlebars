

  <div class="col-3 border rounded border-black mt-5">
  <div class="row post-border bg-dark-red">
    <h2 class="col-6 text-start text-gray">Sign-up</h2>
  </div>
  <div>
    <form id="signup-form" class="row">
      <div>
        <label
          for="signup-name"
          class=" fs-4"
        >Name</label>
        <input type="text" class="form-control" id="signup-name" />
      </div>
      <div>
        <label
          for="signup-email"
          class=" fs-4"
        >Email address</label>
        <input type="email" class="form-control" id="signup-email" />
      </div>
      <div class="pb-3">
        <label
          for="signup-pwd"
          class=" fs-4"
        >Password</label>
        <input type="password" class="form-control" id="signup-pwd" />
      </div>
      <button id="signup-btn" type="submit" class="btn btn-primary">Signup</button>
      <a href="/login" class="text-decoration-none text-black fs-5">Login</a>
    </form>
  </div>
</div>


    <script src="/js/signup.js"></script>