<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  {{#if jobs.length}}
  <div class="col-md-6 job-list">
    <h3>Current Jobs:</h3>

    {{#each jobs as |job|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/job/{{job.id}}">{{job.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger delete-btn" data-id="{{job.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <div class="col-md-6">
    <h3>Job</h3>

    <form class="new-job-form">
      <div class="form-group">
        <label for="job-name">Job Name:</label>
        <input type="text" class="form-control" id="job-name" name="job-name" />
      </div>
      <div class="form-group">
        <label for="job-wage">Hourly Wage:</label>
        <input type="number" step="0.01" min="0" class="form-control" id="job-wage" name="job-wage"></input>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/profile.js"></script>
