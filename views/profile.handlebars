<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{Tip Tracker}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Job</h3>

    <form class="form new-hire-form">
      <div class="job-group">
        <label for="job-name">project name:</label>
        <input class="job-input" type="text" id="job-name" name="job-name" />
      </div>
      <div class="job-group">
        <label for="job-desc">description:</label>
        <textarea class="job-input" id="job-desc" name="job-desc"></textarea>
      </div>
      <div class="job-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if job.length}}
  <div class="col-md-6 project-list">
    <h3>Current Jobs:</h3>

    {{#each jobs as |job|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/job/{{job.id}}">{{job.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{job.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
