

  <div class="col-3 border rounded border-black mt-5">
  <div class="row post-border bg-dark-red">
    <h2 class="col-6 text-start text-gray">Login</h2>
  </div>
  <div>
    <form id="login-form" class="row">
      <div>
        <label
          for="login-email"
          class=" fs-4"
        >Email address</label>
        <input type="email" class="form-control" id="login-email" />
      </div>
      <div class="pb-3">
        <label
          for="login-pwd"
          class=" fs-4"
        >Password</label>
        <input type="password" class="form-control" id="login-pwd" />
      </div>
      <button id="login-btn" type="submit" class="btn btn-primary">Login</button>
      <a href="/signup" class="text-decoration-none text-white fs-5">Sign up</a>
    </form>
  </div>
</div>


